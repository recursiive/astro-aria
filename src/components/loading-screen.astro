<div id="loading-screen" class="loading-screen">
  <div class="loading-content">
    <!-- Central Icon -->
    <div class="icon-container">
      <svg class="shield-icon" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="shieldGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#60a5fa;stop-opacity:1" />
          </linearGradient>
        </defs>
        <path d="M50 10 L80 25 L80 55 Q80 70 50 85 Q20 70 20 55 L20 25 Z" 
              fill="url(#shieldGrad)" 
              opacity="0.9"/>
        <circle cx="50" cy="50" r="15" fill="none" stroke="#ffffff" stroke-width="2" opacity="0.8"/>
        <circle cx="50" cy="50" r="8" fill="#ffffff" opacity="0.6"/>
      </svg>
    </div>
    
    <!-- Loading Text -->
    <div class="loading-text">
      <span class="text-main">Security Systems</span>
      <span class="text-sub">Initializing</span>
    </div>
    
    <!-- Simple Progress Bar -->
    <div class="progress-wrapper">
      <div class="progress-bar" id="progress-bar"></div>
    </div>
    
    <!-- Minimal Status -->
    <div class="status-indicator">
      <div class="status-dot"></div>
      <span class="status-text">Monitoring</span>
    </div>
  </div>
  
  <!-- Subtle Background Pattern -->
  <div class="bg-pattern"></div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
    overflow: hidden;
  }
  
  .loading-screen.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }
  
  .loading-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }
  
  /* Icon Container */
  .icon-container {
    position: relative;
  }
  
  .shield-icon {
    width: 100px;
    height: 100px;
    filter: drop-shadow(0 0 20px rgba(59, 130, 246, 0.5));
    animation: iconFloat 3s ease-in-out infinite;
  }
  
  @keyframes iconFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
      opacity: 0.9;
    }
    50% {
      transform: translateY(-10px) scale(1.05);
      opacity: 1;
    }
  }
  
  /* Loading Text */
  .loading-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .text-main {
    font-family: 'JetBrains Mono', 'Ubuntu Mono', monospace;
    font-size: 1.5rem;
    font-weight: 600;
    color: #e2e8f0;
    letter-spacing: 3px;
    text-transform: uppercase;
    animation: textFade 2s ease-in-out infinite;
  }
  
  .text-sub {
    font-family: 'JetBrains Mono', 'Ubuntu Mono', monospace;
    font-size: 0.875rem;
    font-weight: 400;
    color: #94a3b8;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  
  @keyframes textFade {
    0%, 100% {
      opacity: 0.8;
    }
    50% {
      opacity: 1;
    }
  }
  
  /* Progress Bar */
  .progress-wrapper {
    width: 300px;
    height: 3px;
    background: rgba(30, 41, 59, 0.8);
    border-radius: 2px;
    overflow: hidden;
    position: relative;
  }
  
  .progress-bar {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #60a5fa);
    width: 0%;
    transition: width 0.3s ease-out;
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.6);
    position: relative;
  }
  
  .progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: progressShine 2s ease-in-out infinite;
  }
  
  @keyframes progressShine {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  /* Status Indicator */
  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1rem;
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #3b82f6;
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.8);
    animation: statusPulse 2s ease-in-out infinite;
  }
  
  @keyframes statusPulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
    }
  }
  
  .status-text {
    font-family: 'JetBrains Mono', 'Ubuntu Mono', monospace;
    font-size: 0.75rem;
    color: #94a3b8;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  
  /* Background Pattern */
  .bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.03;
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(59, 130, 246, 0.1) 2px,
        rgba(59, 130, 246, 0.1) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(59, 130, 246, 0.1) 2px,
        rgba(59, 130, 246, 0.1) 4px
      );
    pointer-events: none;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .shield-icon {
      width: 80px;
      height: 80px;
    }
    
    .text-main {
      font-size: 1.25rem;
      letter-spacing: 2px;
    }
    
    .progress-wrapper {
      width: 250px;
    }
  }
</style>

<script>
  // Progress bar animation
  function animateProgress() {
    const progressBar = document.getElementById('progress-bar');
    if (!progressBar) return;
    
    let progress = 0;
    const interval = setInterval(() => {
      progress += Math.random() * 10 + 3;
      if (progress > 100) progress = 100;
      
      progressBar.style.width = progress + '%';
      
      if (progress >= 100) {
        clearInterval(interval);
      }
    }, 200);
  }
  
  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    animateProgress();
  });
  
  // Export functions for page transitions
  (window as any).showLoadingScreen = () => {
    const loadingScreen = document.getElementById('loading-screen');
    if (loadingScreen) {
      loadingScreen.classList.remove('hidden');
      // Reset progress
      const progressBar = document.getElementById('progress-bar');
      if (progressBar) {
        progressBar.style.width = '0%';
      }
      // Restart animation
      setTimeout(() => {
        animateProgress();
      }, 100);
    }
  };
  
  (window as any).hideLoadingScreen = () => {
    const loadingScreen = document.getElementById('loading-screen');
    if (loadingScreen) {
      setTimeout(() => {
        loadingScreen.classList.add('hidden');
      }, 500);
    }
  };
</script>
