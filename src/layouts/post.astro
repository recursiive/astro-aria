---
import Layout from "./main.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <main
    class="relative z-30 max-w-4xl pb-1 mx-auto mt-10 bg-white dark:bg-neutral-950 md:rounded-t-md text-neutral-900"
  >
    <div
      class="relative flex flex-col px-5 pt-6 border-t border-b-0 md:border-r md:border-l md:pt-20 lg:px-0 justify-stretch md:rounded-t-2xl border-neutral-200 dark:border-neutral-800"
    >
      <div
        class="absolute top-0 left-0 hidden w-px h-full mt-1 -translate-x-px md:block bg-gradient-to-b from-transparent to-white dark:to-neutral-950"
      >
      </div>
      <div
        class="absolute top-0 right-0 hidden w-px h-full mt-1 translate-x-px md:block bg-gradient-to-b from-transparent to-white dark:to-neutral-950"
      >
      </div>
      <div class="w-full max-w-2xl mx-auto">
        {/* Tags Section */}
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="flex flex-wrap items-center gap-2 mb-6">
            {frontmatter.tags.map((tag: string) => (
              <span
                class="px-3 py-1.5 text-xs font-semibold text-blue-400 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-700 rounded-full shadow-sm hover:shadow-blue-200/50 dark:hover:shadow-blue-400/20 transition-all duration-300 hover:scale-110 hover:rotate-1 flex-shrink-0 animate-pulse-subtle drop-shadow-[0_0_6px_rgba(59,130,246,0.8)] dark:drop-shadow-[0_0_6px_rgba(59,130,246,0.8)] ring-1 ring-white/30 dark:ring-white/30"
              >
                {tag}
              </span>
            ))}
          </div>
        )}
        <div class="flex items-start justify-between mb-4 gap-4">
          <div class="flex-1">
            <h1
              class="text-3xl font-bold leading-tight tracking-tighter text-left md:mb-2 md:text-4xl dark:text-neutral-100 lg:text-5xl md:leading-none"
            >
              {frontmatter.title}
            </h1>
            <div class="flex flex-wrap items-center gap-3 md:gap-4 mt-2 md:mt-1">
              {frontmatter.dateFormatted && (
                <p class="text-sm text-neutral-500 dark:text-neutral-400">
                  Published on {frontmatter.dateFormatted}
                </p>
              )}
              <span id="view-count" class="inline-flex items-center gap-1.5 text-sm text-neutral-500 dark:text-neutral-400 hidden">
                <svg 
                  id="view-count-icon"
                  class="w-4 h-4 text-neutral-400 dark:text-neutral-500 flex-shrink-0" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" 
                  />
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" 
                  />
                </svg>
                <span id="view-count-text" class="tabular-nums">
                  {/* View count will be populated by tracking script */}
                </span>
              </span>
            </div>
          </div>
          {frontmatter.image && (
            <img 
              src={frontmatter.image} 
              alt={frontmatter.title}
              class="w-20 h-20 md:w-24 md:h-24 flex-shrink-0 rounded-lg object-cover"
            />
          )}
        </div>
        {frontmatter.hidden && (
          <div class="mb-6 p-4 rounded-lg backdrop-blur-md bg-amber-500/20 border border-amber-400/30 shadow-lg shadow-amber-500/10">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-amber-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <p class="text-sm font-medium text-amber-200 dark:text-amber-300">
                This post is still under works. Check back soon!
              </p>
            </div>
          </div>
        )}
      </div>
    </div>

    <div class="relative w-full max-w-6xl mx-auto px-7 lg:px-0">
      <article
        class={`w-full max-w-2xl mx-auto mb-20 md:mb-20 prose-sm prose lg:prose-lg dark:prose-invert post-article ${frontmatter.hidden ? '[&>*]:blur-sm [&>*]:select-none [&>*]:pointer-events-none' : ''}`}
      >
        <slot />
      </article>
      
      <aside id="table-of-contents" class="toc-sidebar"></aside>
    </div>
  </main>

  <script is:inline>
    function formatJSONCodeBlocks() {
      const codeBlocks = document.querySelectorAll('.prose pre code[class*="language-json"]');
      
      codeBlocks.forEach((code) => {
        try {
          const text = code.textContent.trim();
          if (text) {
            // Try to parse and format JSON
            const parsed = JSON.parse(text);
            const formatted = JSON.stringify(parsed, null, 2);
            code.textContent = formatted;
          }
        } catch (e) {
          // If it's not valid JSON, leave it as is
        }
      });
    }

    function initCodeBlockExpansion() {
      const codeBlocks = document.querySelectorAll('.prose pre');
      
      codeBlocks.forEach((pre) => {
        const code = pre.querySelector('code');
        if (!code) return;
        
        // Check if content exceeds max height
        const maxHeight = 400; // Match CSS max-height
        const scrollHeight = code.scrollHeight;
        
        if (scrollHeight > maxHeight) {
          // Create expand button
          const expandBtn = document.createElement('button');
          expandBtn.className = 'code-expand-btn';
          expandBtn.innerHTML = `
            <span>Expand</span>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          `;
          
          expandBtn.addEventListener('click', () => {
            pre.classList.toggle('expanded');
            const span = expandBtn.querySelector('span');
            const svg = expandBtn.querySelector('svg');
            if (pre.classList.contains('expanded')) {
              span.textContent = 'Collapse';
              svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />';
            } else {
              span.textContent = 'Expand';
              svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />';
            }
          });
          
          pre.appendChild(expandBtn);
        }
      });
    }

    function initTableOfContents() {
      const article = document.querySelector('article.prose') || document.querySelector('article');
      if (!article) return;

      const headings = article.querySelectorAll('h2, h3, h4');
      if (headings.length === 0) {
        const tocContainer = document.getElementById('table-of-contents');
        if (tocContainer) tocContainer.style.display = 'none';
        return;
      }

      const tocContainer = document.getElementById('table-of-contents');
      if (!tocContainer) return;

      const tocList = document.createElement('ul');
      tocList.className = 'toc-list';
      
      const stack = [{ level: 1, element: tocList }];
      
      headings.forEach((heading) => {
        // Generate ID if it doesn't have one
        let id = heading.id;
        if (!id) {
          id = heading.textContent
            .toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/^-+|-+$/g, '');
          heading.id = id;
        }

        const level = parseInt(heading.tagName.substring(1));
        const listItem = document.createElement('li');
        listItem.className = `toc-item toc-level-${level}`;
        
        const link = document.createElement('a');
        link.href = `#${id}`;
        link.textContent = heading.textContent;
        link.className = 'toc-link';
        
        // Smooth scroll behavior
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const target = document.getElementById(id);
          if (target) {
            const offset = 80;
            const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
            history.pushState(null, '', `#${id}`);
          }
        });
        
        listItem.appendChild(link);
        
        // Find the appropriate parent list based on level
        while (stack.length > 1 && stack[stack.length - 1].level >= level) {
          stack.pop();
        }
        
        const parent = stack[stack.length - 1].element;
        const parentLevel = stack[stack.length - 1].level;
        
        // If this is a deeper level, create a nested list
        if (level > parentLevel) {
          const nestedList = document.createElement('ul');
          nestedList.className = 'toc-sublist';
          listItem.appendChild(nestedList);
          parent.appendChild(listItem);
          stack.push({ level, element: nestedList });
        } else {
          parent.appendChild(listItem);
        }
      });

      if (tocList.children.length > 0) {
        // Remove any inline display styles to allow CSS media query to control visibility
        tocContainer.style.display = '';
        const tocTitle = document.createElement('h3');
        tocTitle.className = 'toc-title';
        tocTitle.textContent = 'Table of Contents';
        tocContainer.appendChild(tocTitle);
        tocContainer.appendChild(tocList);
        
        // Scroll spy functionality
        const tocLinks = tocContainer.querySelectorAll('.toc-link');
        const observerOptions = {
          rootMargin: '-20% 0px -70% 0px',
          threshold: 0
        };
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              // Remove active class from all links
              tocLinks.forEach(link => link.classList.remove('active'));
              
              // Add active class to corresponding TOC link
              const id = entry.target.id;
              const activeLink = tocContainer.querySelector(`a[href="#${id}"]`);
              if (activeLink) {
                activeLink.classList.add('active');
              }
            }
          });
        }, observerOptions);
        
        // Observe all headings
        headings.forEach(heading => observer.observe(heading));
      }
    }
    
    // Initialize when DOM is ready
    function init() {
      formatJSONCodeBlocks();
      initTableOfContents();
      initCodeBlockExpansion();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  </script>

  <!-- View Tracking Script -->
  <script is:inline>
    (function() {
      // Extract slug from URL (e.g., /post/meerkat -> meerkat)
      const pathParts = window.location.pathname.split('/').filter(Boolean);
      const slug = pathParts[pathParts.length - 1];
      
      if (!slug || slug === 'post') return; // Skip if no valid slug
      
      const isProduction = window.location.hostname !== 'localhost' && 
                          window.location.hostname !== '127.0.0.1';
      
      // Helper function to update view count display
      function updateViewCount(views) {
        const viewCountText = document.getElementById('view-count-text');
        const viewCountContainer = document.getElementById('view-count');
        
        if (viewCountText && views !== undefined && views > 0) {
          // Format number with commas for readability
          const formattedViews = views.toLocaleString();
          viewCountText.textContent = formattedViews;
          if (viewCountContainer) {
            viewCountContainer.classList.remove('hidden');
            viewCountContainer.style.display = 'inline-flex';
          }
        } else if (viewCountContainer) {
          viewCountContainer.classList.add('hidden');
          viewCountContainer.style.display = 'none';
        }
      }
      
      // Load initial view count (works in both dev and production)
      fetch(`/api/track-view?slug=${encodeURIComponent(slug)}`)
        .then(response => response.json())
        .then(result => {
          updateViewCount(result.views);
        })
        .catch(() => {
          // Hide view count if API is not available
          const viewCountContainer = document.getElementById('view-count');
          if (viewCountContainer) viewCountContainer.style.display = 'none';
        });
      
      // Track view (only in production)
      if (isProduction) {
        const data = JSON.stringify({ slug });
        
        fetch('/api/track-view', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: data,
          keepalive: true
        })
        .then(response => response.json())
        .then(result => {
          // Update view count display after tracking
          updateViewCount(result.views);
        })
        .catch(err => {
          // Silently fail - tracking shouldn't break the page
          console.debug('View tracking failed:', err);
        });
      }
    })();
  </script>
</Layout>